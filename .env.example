###############################################
# LibreChat — Environment Template
# Скопируй этот файл в .env.local и заполни секреты
###############################################

########## Core / Network #####################

HOST=0.0.0.0
PORT=3080
ORIGIN=http://localhost:3080
NEXTAUTH_URL=http://localhost:3080
AUTH_TRUST_HOST=true

########## Config #############################

CONFIG_PATH=/app/librechat.yaml
MCP_ENABLED=true
MONGO_URI=mongodb://mongo:27017/librechat

########## Auth / Registration ################

ALLOW_REGISTRATION=true
ALLOW_EMAIL_LOGIN=true

########## JWT / Sessions #####################

SESSION_EXPIRY=900000           # 15 минут
REFRESH_TOKEN_EXPIRY=2592000000 # 30 дней

########## Providers ##########################

OPENAI_API_KEY=YOUR_SECRET_HERE

########## Secrets ############################

NEXTAUTH_SECRET=YOUR_SECRET_HERE
SESSION_SECRET=YOUR_SECRET_HERE
JWT_SECRET=YOUR_SECRET_HERE
JWT_REFRESH_SECRET=YOUR_SECRET_HERE

########## Paths Configuration ################

LOCAL_DOCS_PATH=YOUR_PATH_HERE
LOCAL_DATA_PATH=YOUR_PATH_HERE

########## RAG API Settings ###################

RAG_API_URL=http://rag_api:8000
RAG_DB_HOST=vectordb
RAG_EMBEDDINGS_PROVIDER=ollama
RAG_OLLAMA_BASE_URL=http://ollama:11434
RAG_COLLECTION_NAME=librechat
RAG_CHUNK_SIZE=800
RAG_CHUNK_OVERLAP=100
RAG_USE_FULL_CONTEXT=false
RAG_DEBUG_API=false

########## VectorDB (PostgreSQL) ##############

VECTORDB_DB=mydatabase
VECTORDB_USER=myuser
VECTORDB_PASSWORD=mypassword

########## Маппинг для совместимости ###########

# RAG API
DB_HOST=${RAG_DB_HOST}
EMBEDDINGS_PROVIDER=${RAG_EMBEDDINGS_PROVIDER}
OLLAMA_BASE_URL=${RAG_OLLAMA_BASE_URL}
COLLECTION_NAME=${RAG_COLLECTION_NAME}
CHUNK_SIZE=${RAG_CHUNK_SIZE}
CHUNK_OVERLAP=${RAG_CHUNK_OVERLAP}
DEBUG_RAG_API=${RAG_DEBUG_API}

# PostgreSQL
POSTGRES_DB=${VECTORDB_DB}
POSTGRES_USER=${VECTORDB_USER}
POSTGRES_PASSWORD=${VECTORDB_PASSWORD}

