###############################################
# LibreChat — Environment Template
# Копируй этот файл как .env и заполняй секреты вручную
###############################################

########## Core / Network #####################
HOST=0.0.0.0
PORT=3080
ORIGIN=http://localhost:3080
NEXTAUTH_URL=http://localhost:3080
AUTH_TRUST_HOST=true

########## Config #############################
CONFIG_PATH=/app/librechat.yaml
MCP_ENABLED=true
MONGO_URI=mongodb://mongo:27017/librechat

########## Auth / Registration ################
ALLOW_REGISTRATION=true
ALLOW_EMAIL_LOGIN=true

########## JWT / Sessions #####################
SESSION_EXPIRY=900000           # 15 минут
REFRESH_TOKEN_EXPIRY=2592000000 # 30 дней

########## Providers (из Bitwarden) ###########
OPENAI_API_KEY=YOUR_SECRET_HERE

########## Secrets (из Bitwarden) #############
NEXTAUTH_SECRET=YOUR_SECRET_HERE
SESSION_SECRET=YOUR_SECRET_HERE
JWT_SECRET=YOUR_SECRET_HERE
JWT_REFRESH_SECRET=YOUR_SECRET_HERE

